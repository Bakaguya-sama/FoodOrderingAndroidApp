<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OrderActivity"
    android:background="@android:color/white">

    <!-- Tiêu đề -->

    <!-- Đường line/shadow -->
    <LinearLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/delivering_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deliveringimg"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cliked_food_delivering" />

            <TextView
                android:id="@+id/deliveringTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="DELIVERING"
                android:textAlignment="center"
                android:textColor="#C0392B"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/shadow" />

        <LinearLayout
            android:id="@+id/received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/receiveimg"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/food_delivered_icon" />

            <TextView
                android:id="@+id/receiveTxt"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="RECEIVED
"
                android:textAlignment="center"
                android:textColor="#6E6E6E"
                android:textSize="24sp"


                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/a" />

    <!-- Layout hiển thị khi không có đơn hàng -->

    <LinearLayout
        android:id="@+id/emptyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/view5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="270dp"
            android:layout_height="335dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nooderheticon" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="You Have No Order"
            android:textColor="#6E6E6E"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- RecyclerView khi có đơn hàng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderlist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view5" />

</androidx.constraintlayout.widget.ConstraintLayout>
