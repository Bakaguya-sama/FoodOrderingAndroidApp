<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChangePassword_AccountActivity">

    <!-- Scrollable content -->
    <LinearLayout
        android:id="@+id/linearLayout_ChangePassword_AccountActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footerButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Change Password"
                android:textColor="@color/black"/>

            <!-- Ná»™i dung form -->
            <TextView
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curren Password"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTxt_CurrentPass_ChangePassword_AccountActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current Password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingEnd="48dp"
                    android:background="@drawable/edit_text_border" />

                <ImageView
                    app:tint="@color/black"
                    android:id="@+id/eye_current"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/visibility_off"
                    android:contentDescription="Toggle visibility"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>

            <TextView
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTxt_NewPass_ChangePassword_AccountActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingEnd="48dp"
                    android:background="@drawable/edit_text_border" />

                <ImageView
                    app:tint="@color/black"
                    android:id="@+id/eye_new"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/visibility_off"
                    android:contentDescription="Toggle visibility"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>

            <TextView
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-enter Password"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTxt_ReEnterNewPass_ChangePassword_AccountActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Re-enter Your Password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingEnd="48dp"
                    android:background="@drawable/edit_text_border" />

                <ImageView
                    app:tint="@color/black"
                    android:id="@+id/eye_reenter"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/visibility_off"
                    android:contentDescription="Toggle visibility"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Button Save -->
    <LinearLayout
        android:id="@+id/footerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Back_ChangePassword_AccountActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#2665AD"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_rectangle_white"
            android:onClick="onClick_Back_ChangePassword_AccountActivity" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Continue_ChangePassword_AccountActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Continue"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rectangle_blue"
            android:onClick="onClick_Continue_ChangePassword_AccountActivity" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
